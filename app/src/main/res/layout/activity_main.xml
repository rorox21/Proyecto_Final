<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tipoActividadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Tipo de Actividad" />

    <EditText
        android:id="@+id/distanciaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipoActividadEditText"
        android:layout_marginTop="48dp"
        android:hint="Distancia" />

    <EditText
        android:id="@+id/tiempoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distanciaEditText"
        android:layout_marginTop="53dp"
        android:hint="Tiempo" />

    <Button
        android:id="@+id/registrarActividadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tiempoEditText"
        android:layout_marginTop="92dp"
        android:text="@string/registrar_actividad" />

    <Button
        android:id="@+id/verHistorialBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrarActividadBtn"
        android:layout_alignStart="@+id/registrarActividadBtn"
        android:layout_alignEnd="@+id/registrarActividadBtn"
        android:layout_marginStart="191dp"
        android:layout_marginTop="-49dp"
        android:layout_marginEnd="-191dp"
        android:text="@string/ver_historial" />

    <Button
        android:id="@+id/verHospitalesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verHistorialBtn"
        android:layout_alignStart="@+id/verHistorialBtn"
        android:layout_alignEnd="@+id/verHistorialBtn"
        android:layout_marginStart="-87dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="90dp"
        android:text="@string/hospitales" />


</RelativeLayout>
